<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activity.LauncherActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/vector_image"
        android:layout_width="@dimen/_0sdp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_splash_vector" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_app_1"
        style="@style/TextExtraBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_splash1"
        android:textColor="#0076FF"
        android:textSize="@dimen/_24ssp"
        app:layout_constraintBottom_toTopOf="@+id/text_app_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vector_image"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_app_2"
        style="@style/TextSemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_splash2"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_app_1" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:indeterminate="true"
        app:indicatorColor="@color/colorAccent"
        app:indicatorSize="@dimen/_24sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:trackColor="@color/colorTransparent"
        app:trackCornerRadius="@dimen/_2sdp"
        app:trackStopIndicatorSize="@dimen/_0sdp"
        app:trackThickness="@dimen/_4sdp" />

</androidx.constraintlayout.widget.ConstraintLayout>