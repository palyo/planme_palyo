<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PlanMe" parent="Theme.Space">
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="titleTextColor">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:ignore="NewApi">true</item>
    </style>

    <style name="Theme.PlanMe.Dialog" parent="Theme.Space.Dialog">
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Theme.PlanMe.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:background">@color/colorBackground</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">@dimen/_1sdp</item>
        <item name="tabMode">auto</item>
        <item name="tabPaddingEnd">@dimen/_12sdp</item>
        <item name="tabPaddingStart">@dimen/_12sdp</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabSelectedTextColor">@color/colorAccentTool</item>
        <item name="tabTextAppearance">@style/Theme.Space.TabTextAppearance</item>
    </style>
</resources>