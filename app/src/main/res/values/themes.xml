<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PlanMe" parent="Theme.Space">
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="titleTextColor">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:ignore="NewApi">true</item>
    </style>

    <style name="Theme.PlanMe.Dialog" parent="Theme.Space.Dialog">
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Theme.PlanMe.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:background">@color/colorBackground</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">@dimen/_1sdp</item>
        <item name="tabMode">auto</item>
        <item name="tabPaddingEnd">@dimen/_12sdp</item>
        <item name="tabPaddingStart">@dimen/_12sdp</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabSelectedTextColor">@color/colorAccentTool</item>
        <item name="tabTextAppearance">@style/Theme.Space.TabTextAppearance</item>
    </style>

    <style name="Theme.PlanMe.BottomNavigationView">
        <item name="backgroundTint">@color/colorCardBackground</item>
        <item name="itemActiveIndicatorStyle">@style/Theme.Space.Indicator</item>
        <item name="itemIconSize">@dimen/_18sdp</item>
        <item name="itemIconTint">@color/ic_navigation_selector</item>
        <item name="itemPaddingBottom">@dimen/_8sdp</item>
        <item name="itemRippleColor">@color/colorWhite16</item>
        <item name="itemTextColor">@color/ic_navigation_selector</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <style name="Theme.PlanMe.TextInputLayout" parent="TextInputLayout">
        <item name="boxBackgroundColor">@color/colorCardBackground</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxCollapsedPaddingTop">@dimen/_4sdp</item>
        <item name="boxStrokeWidth">@dimen/_0sdp</item>
        <item name="boxStrokeWidthFocused">@dimen/_0sdp</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextColor">@color/colorTextOpacity</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_8sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_8sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_8sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_8sdp</item>
    </style>
</resources>